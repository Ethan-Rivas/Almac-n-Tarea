<Window x:Class="Almacén.Login.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Almacén.Login"
        mc:Ignorable="d"
        Title="Login - Ethan Rivas" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Width="400">
    <Grid Width="400" Height="300">
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Iniciar Sesión" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="24"/>
        
        <Label Content="Correo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,80,0,0" Padding="0,5,5,5" FontSize="16"/>
        <TextBox x:Name="email" TextWrapping="Wrap" VerticalAlignment="Top" Margin="50,110,50,0" FontSize="16" Text="ethan@codigo.com"/>

        <Label Content="Contraseña" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,150,0,0" Padding="0,5,5,5" FontSize="16"/>
        <PasswordBox x:Name="password" VerticalAlignment="Top" Margin="50,180,50,0" FontSize="16" Password="test123"/>

        <Button Content="Iniciar Sesión" VerticalAlignment="Top" Margin="50,230,50,40" FontSize="16" Click="Button_Click"/>
    </Grid>
</Window>
