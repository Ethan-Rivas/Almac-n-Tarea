<Page x:Class="Almacén.Users"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Almacén"
      mc:Ignorable="d"
      Title="Users">

    <Grid Background="White" MinHeight="70" Height="360">
        <TextBlock TextWrapping="Wrap" Margin="101,10,91,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Text="Lista de Usuarios"/>

        <Grid HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="400" Margin="15,42,0,0">
            <Button Content="Buscar" VerticalAlignment="Bottom" Margin="0,10,0,0" Click="Button_Search"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Correo" VerticalAlignment="Top" Margin="0,9,0,0"/>
            <TextBox x:Name="email" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="41,6,0,0"/>
        </Grid>

        <DataGrid x:Name="UsersTable" VerticalAlignment="Top" Margin="15,115,15,0" MinWidth="400" MinHeight="200" IsReadOnly="True"/>
    </Grid>
</Page>
